<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="key_url_service"
        android:title="@string/pref_title_url_service"
        android:defaultValue="@string/pref_default_url_service"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="key_time_reload"
        android:title="@string/pref_title_time_reload"
        android:defaultValue="@string/pref_default_time_reload"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1"/>

</PreferenceScreen>
